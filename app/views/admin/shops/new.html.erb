<%= render "admin/header"%>

<div class="container">
  <div class="col-sm-6">
  <%= form_with url: admin_shops_path, model: @shop do |form| %>

      <div class="form-group">
        <%= label_tag :address %>
        <%= form.text_field :address, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag :business_day %>
        <%= form.text_field :business_day, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag :regular_holiday %>
        <%= form.text_field :regular_holiday, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :opening_hours %>
        <%= form.text_field :opening_hours, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :closing_time %>
        <%= form.text_field :closing_time, class: "form-control" %>
      </div>
      <%= form.submit "Submit", class: "btn btn-primary "%>
    <% end %>
  </div>
</div>