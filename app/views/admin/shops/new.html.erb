<%= render "admin/header"%>

<div class="container">
  <div class="col-sm-6">
  <%= form_with url: admin_account_shops_path, model: @shop, local: true do |f| %>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :business_day %>
        <%= f.text_field :business_day, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :regular_holiday %>
        <%= f.text_field :regular_holiday, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :opening_hours %>
        <%= f.time_select :opening_hours, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :closing_time %>
        <%= f.time_select :closing_time, class: "form-control" %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary "%>
    <% end %>
  </div>
</div>