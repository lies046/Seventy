<%= render "layouts/customer_header" %>
  <div class="container">
    <div class="row">
      <div class="card mx-auto d-block mt-5" style="width: 18rem;">
        <%= image_tag @menu.image.thumb.url ,class:"card-img-top"%>
          <div class="card-body">
            <h5 class="card-title"><%= @menu.product_name %></h5>
            <p class="card-text"><%= @menu.price%>円</p>
            <div class="text-right">
              <%= form_with url:add_item_path, local: true do |f| %>
              <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "数量選択" %>
              <%= f.hidden_field :menu_id, value: @menu.id %>
              <%= f.submit "カートへ追加", class:"btn btn-success" %> 
            <% end %>
            </div>
         </div>
       </div>
    </div>
  </div>
