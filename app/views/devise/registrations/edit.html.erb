<body class="text-center mt-5">

<h2>店舗情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">

  <div class="form-group">
    <%= f.label :shop_name %><br />
    <%= f.text_field :shop_name,class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
        
  <div class="form-group">
    <%= f.label :regular_holiday %>
    <%= f.text_field :regular_holiday, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :opening_hours %>
    <%= f.time_select :opening_hours,:minute_step => 15, prompt:true, ignore_data:true %>
  </div>

  <div class="form-group">
    <%= f.label :closing_time %>
    <%= f.time_select :closing_time, :minute_step => 15, prompt:true, ignore_data:true %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, id: "user_img", class: "form-control" %>
    <% if @account.image.present? %>
      <%= image_tag @account.image.url, id: :img_prev %>
    <% else %>
      <%= image_tag "noimage.png", id: :img_prev %>
    <% end %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
  </div>

   <%= f.submit "更新", class: "btn btn-primary "%>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

</div>
</body>
